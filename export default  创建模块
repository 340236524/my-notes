export default {
    // 方法1
    checkLogin(){
        var token = window.localStorage.getItem('user_token');
        return token ?  true : false ;  // 三元运算
    }

    // 方法2
    getToken(){
        var token = window.localStorage.getItem('user_token');

        return token ?  token : null ;  // 三元运算
    }

}

